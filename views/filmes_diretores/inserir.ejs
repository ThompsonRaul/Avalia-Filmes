<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inserir Conjunto Filme/Diretor</title>
    <!-- Estilos do Bootstrap -->
    <%- include('../../partials/estilizacao.ejs') %>
  </head>

  <body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container mt-5 min-vh-100">
      <h2 class="mb-4">Inserir Conjunto Filme/Diretor</h2>
      <form method="post" action="/filmes_diretores/post">
        <div class="form-group">
          <label for="FilmeID">Selecione um Filme:</label>
          <select class="form-control" id="FilmeID" name="FilmeID" required>
            <option value="" disabled selected>-- Selecione um Filme --</option>
            <% filmes.forEach(function(filme) { %>
            <option value="<%= filme.FilmeID %>"><%= filme.Titulo %></option>
            <% }); %>
          </select>
        </div>

        <div class="form-group">
          <label for="DiretorID">Selecione um Diretor:</label>
          <select class="form-control" id="DiretorID" name="DiretorID" required>
            <option value="" disabled selected>
              -- Selecione um Diretor --
            </option>
            <% diretores.forEach(function(diretor) { %>
            <option value="<%= diretor.DiretorID %>">
              <%= diretor.NomeDiretor %>
            </option>
            <% }); %>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">
          Inserir Conjunto Filme/Diretor
        </button>
      </form>
    </div>
    <%- include('../../partials/footer.ejs') %>
  </body>
</html>
